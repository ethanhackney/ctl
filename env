#!/bin/bash

# one thing we need
if [ -z "$CTL_ROOT" ]; then
  echo "env: CTL_ROOT undefined" 2>&1
  exit 1
fi

export CTL_BASH_LIB="$CTL_ROOT/bashlib" # bash library
export CTL_ARCH="$CTL_ROOT/arch"        # project docs
export CTL_LIB="$CTL_ROOT/lib/lib.c"    # libraries
export CTL_TMP="$CTL_ROOT/tmp"          # templates
